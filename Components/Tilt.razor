<h3>Tilt Indicators</h3>

<div class="tilt-grid">
    <!-- X Axis (Roll) -->
    <div class="tilt-item">
        <p><strong>X Axis (Roll)</strong></p>
        <div class="tilt-box">
            <button class="btn btn-outline-info w-100">X-Axis</button>
        </div>
        <p class="mt-2">@roll°</p>
    </div>

    <!-- Y Axis (Pitch) -->
    <div class="tilt-item">
        <p><strong>Y Axis (Pitch)</strong></p>
        <div class="tilt-box">
            <button class="btn btn-outline-info w-100">Y-Axis</button>
        </div>
        <p class="mt-2">@pitch°</p>
    </div>
</div>

<style>
    .tilt-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        height: 100%;
    }

    .tilt-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
    }

    .tilt-box {
        width: 100%;
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

@code {
    double roll = 10.0;
    double pitch = -5.0;
}