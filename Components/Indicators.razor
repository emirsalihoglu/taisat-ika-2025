<div class="status-bar d-flex flex-wrap align-items-center gap-4 text-white">

    <!-- Battery -->
    <div class="d-flex align-items-center flex-grow-1" style="min-width: 180px;">
        <strong class="me-2">Battery:</strong>
        <div class="progress w-100" style="height: 20px;">
            <div class="progress-bar bg-success"
                 role="progressbar"
                 style="width: @($"{batteryLevel}%")"
                 aria-valuenow="@batteryLevel" aria-valuemin="0" aria-valuemax="100">
                @batteryLevel%
            </div>
        </div>
    </div>

    <!-- Speed -->
    <div>
        <strong>Speed:</strong> @speed km/h
    </div>

    <!-- Direction -->
    <div>
        <strong>Direction:</strong>
        <span class="@DirectionClass">@direction</span>
    </div>
</div>

<style>
    .status-bar {
        font-size: 0.95rem;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    /* Razor içinde media query desteği yok, burası app.css'e taşınmalı */
</style>

@code {
    int batteryLevel = 85;
    double speed = 10.5;
    string direction = "Forward";

    string DirectionClass => direction switch
    {
        "Forward" => "text-success",
        "Reverse" => "text-danger",
        "Neutral" => "text-warning",
        _ => "text-muted"
    };
}