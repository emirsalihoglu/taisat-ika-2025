@page "/"

<!-- Üst sabit bar -->
<div style="position: fixed; top: 0; left: 0; right: 0; z-index: 1030; background-color: #1e1e2f; padding: 0.5rem 1rem;">
    <Indicators />
</div>

<!-- İçerik alanı -->
<div class="main-layout content-grid">

    <!-- Sol Panel -->
    <div class="left-panel">
        <div class="camera-section card p-0">
            <!-- Başlık kaldırıldı, padding sıfırlandı -->
            <Camera />
        </div>
        <div class="map-section card">
            <Map />
        </div>
    </div>

    <!-- Sağ Panel -->
    <div class="right-panel">
        <!-- Rviz alanı daha fazla alan alsın -->
        <div class="rviz-map card">
            <RvizPanel />
        </div>

        <!-- Alt kontroller -->
        <div class="bottom-controls">
            <div class="card websocket-card">
                <WebSocket />
            </div>
            <div class="card control-card">
                <ControlPanel />
            </div>
        </div>
    </div>

</div>